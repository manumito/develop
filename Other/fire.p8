pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
function _init()
	parts = {}
	
	force = 0
	forced = .1

end

function _update()

	force+=forced*rnd(1)
	
	if force>1 or force<-1 then
		forced = forced*-1
	end

	for i=1,20 do
		add(parts, {
			x=57+rnd(10),
			y=90+rnd(10),
			r=rnd(3),
			c=7,
			l=20,
			speed=1+rnd(1)
		})
	end

	for p in all(parts) do
		p.y-=p.speed
		p.l-=1
		p.r-=.1
		p.x+=force
		
		if p.l<10 then
			p.c = 9
		elseif p.l<18 then
			p.c = 10
		end
		
		if (p.l<0) then
			del(parts, p)
		end
	end
end

function _draw()
	cls()
	spr(1,54,92,2,16, 16)
	for p in all(parts) do
		circfill(p.x,p.y,p.r,p.c)
	end
end
